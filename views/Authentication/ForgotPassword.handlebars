<div id="form-parent">
    <div class="form-child">

    <form action="/updatePassword" method="post" id="login-form">
    <h1>Social Network</h1>
    <h3 style="color: red;">{{error}}</h3>
    <h3 style="color: green;">{{success}}</h3>
    <input type="email" name="email" id="email" placeholder="Enter your email" required>
     <input type="password" name="password" id="password" placeholder="Enter new password" required>
     <input type="password" name="confirmPassword" id="password" placeholder="Confirm new password" required>
    <button id="button" type="submit">Update password</button>
    </form>

    <div>
        <a href="/">Need to login?</a>
    </div>

    </div>
</div>